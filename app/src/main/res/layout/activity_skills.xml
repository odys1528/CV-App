<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpp_bar"
        android:layout_alignStart="@+id/cpp_bar"
        android:id="@+id/c_bar"
        android:max="100"
        android:progress="60"
        android:minHeight="22dp"
        android:minWidth="100dip"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_bar"
        android:layout_alignStart="@+id/c_bar"
        android:id="@+id/java_bar"
        android:max="100"
        android:minHeight="22dp"
        android:minWidth="100dp"
        android:progress="67"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/python_bar"
        android:max="100"
        android:minHeight="20dp"
        android:minWidth="100dp"
        android:progress="70"
        android:layout_below="@+id/java_bar"
        android:layout_alignStart="@+id/java_bar"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpp_bar"
        android:max="100"
        android:progress="67"
        android:minWidth="100dp"
        android:minHeight="22dp"
        android:layout_marginStart="26dp"
        android:layout_alignTop="@+id/programming_list"
        android:layout_toEndOf="@+id/programming_list"
        android:progressTint="@color/colorPrimary" />

    <TextView
        android:text="@string/programming_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/programming_list"
        android:layout_marginTop="52dp"
        android:fontFamily="casual"
        android:textAlignment="textEnd"
        android:layout_marginStart="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/programming" />

    <TextView
        android:text="@string/programming_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/programming"
        android:rotation="-90"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/cpp_bar"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/python_bar"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/languages_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/languages_list"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:layout_below="@+id/programming_list"
        android:layout_alignEnd="@+id/programming_list"
        android:textAlignment="textEnd" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/languages_list"
        android:layout_alignStart="@+id/python_bar"
        android:id="@+id/pl_bar"
        android:max="100"
        android:minHeight="23dp"
        android:minWidth="100dp"
        android:progress="100"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pl_bar"
        android:layout_alignStart="@+id/pl_bar"
        android:id="@+id/eng_bar"
        android:max="100"
        android:minHeight="23dp"
        android:minWidth="100dp"
        android:progress="75"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/languages_list"
        android:layout_alignStart="@+id/eng_bar"
        android:id="@+id/ger_bar"
        android:max="100"
        android:minHeight="23dp"
        android:minWidth="100dp"
        android:progress="50"
        android:progressTint="@color/colorPrimary"/>

    <TextView
        android:text="@string/languages_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/languages_skills"
        android:fontFamily="casual"
        android:textSize="15sp"
        android:rotation="-90"
        android:layout_gravity="center"
        android:layout_below="@+id/pl_bar"
        android:layout_toStartOf="@+id/languages_list"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/graphics_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/graphics_list"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:textAlignment="textEnd"
        android:layout_below="@+id/languages_list"
        android:layout_alignEnd="@+id/languages_list" />

    <TextView
        android:text="@string/graphics_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:id="@+id/graphics_skills"
        android:rotation="-90"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/graphics_list"
        android:layout_alignStart="@+id/programming"
        android:textStyle="normal|bold" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/graphics_list"
        android:layout_alignStart="@+id/ger_bar"
        android:id="@+id/gimp_bar"
        android:max="100"
        android:minHeight="23dp"
        android:minWidth="100dp"
        android:progress="70"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/graphics_list"
        android:layout_alignStart="@+id/gimp_bar"
        android:id="@+id/photoshop_bar"
        android:max="100"
        android:minHeight="23dp"
        android:minWidth="100dp"
        android:progress="50"
        android:progressTint="@color/colorPrimary"/>

    <TextView
        android:text="@string/other_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graphics_list"
        android:layout_alignEnd="@+id/graphics_list"
        android:layout_marginTop="44dp"
        android:id="@+id/other_list"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        android:fontFamily="casual" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/other_list"
        android:layout_alignStart="@+id/photoshop_bar"
        android:id="@+id/joomla_bar"
        android:max="100"
        android:minHeight="23dp"
        android:minWidth="100dp"
        android:progress="70"
        android:progressTint="@color/colorPrimary"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joomla_bar"
        android:layout_alignStart="@+id/joomla_bar"
        android:id="@+id/android_bar"
        android:max="100"
        android:progress="65"
        android:minWidth="100dp"
        android:minHeight="23dp"
        android:progressTint="@color/colorPrimary"/>

    <TextView
        android:text="@string/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skills_title"
        android:fontFamily="casual"
        android:textSize="30sp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/other_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_skills"
        android:fontFamily="casual"
        android:textSize="15sp"
        android:rotation="-90"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/other_list"
        android:layout_toStartOf="@+id/other_list"
        android:textStyle="normal|bold" />

</RelativeLayout>