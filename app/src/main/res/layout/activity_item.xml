<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="48dp"
        android:id="@+id/activity_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:fontFamily="casual" />

    <TextView
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/activity_description"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:layout_below="@+id/activity_date"
        android:layout_alignStart="@+id/activity_date" />

    <TextView
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_date"
        android:fontFamily="casual"
        android:textSize="12sp"
        android:layout_below="@+id/activity_name"
        android:layout_alignStart="@+id/activity_name" />

    <CheckBox
        android:text="@string/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/is_certified_checkBox"
        android:layout_marginTop="25dp"
        android:fontFamily="casual"
        android:textSize="15sp"
        android:clickable="false"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_below="@+id/activity_description"
        android:layout_alignStart="@+id/activity_description" />
</RelativeLayout>